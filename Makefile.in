#
# Makefile rules for the GaloisGroups package
#
KEXT_NAME = GaloisGroups
KEXT_SOURCES = src/GaloisGroups.c

KEXT_CFLAGS = -I$(PARIPATH)/include
KEXT_LDFLAGS = -L$(PARIPATH)/lib -lpari

########################################################################
# Do not edit below unless you know what you're doing
########################################################################

########################################################################
# Some variables that come from GAP via our configure script
########################################################################
GAPPATH = @GAPPATH@
PARIPATH = @PARIPATH@
KEXT_RECONF ?= ./configure --with-gaproot="$(GAPPATH)" --with-pari="$(PARIPATH)"
include Makefile.gappkg
